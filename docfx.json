{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "**/_site/**",
          "_exported_templates/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/**/media/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/innova"
    ],
    "globalMetadata": {
      "_appName": "Learn Innova Developer Platform",
      "_appTitle": " Learn Innova Developer Platform",
      "_enableSearch": true,
      "_appLogoPath": "logo.svg",
      "_appFaviconPath": "favicon.ico",
      "_appFooter" : "Innova Developer Platform", 
      "_disableNextArticle" : true,
      "pdf": false
    }
  }
}