{
  "metadata": [
    {
      "src": [
        {
          "src": "C:\\Source\\Workspaces\\Workspace\\Innova Frameworks\\IDP\\src\\Innova.Data",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
    "memberLayout": "separatePages",
	  "namespaceLayout": "nested",
      "dest": "api",
      "filter": "filterConfig.yml" 
    
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "**/_site/**",
          "_exported_templates/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "docs/**/media/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/innova"
    ],
    "globalMetadata": {
      "_appName": "Learn Innova Developer Platform",
      "_appTitle": " Learn Innova Developer Platform",
      "_enableSearch": true,
      "_appLogoPath": "images/logo.svg",
      "_appFaviconPath": "images/favicon.ico",
      "_appFooter" : "Innova Developer Platform", 
      "_disableNextArticle" : true,
      "pdf": false
    }
  }
}